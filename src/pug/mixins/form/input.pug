mixin input (placeholder, name, width, image = false, label = false)
    +e.field.input__(class=`${width ? width : ''}`)
        if (label)
            +e.LABLE.label !{label}
        +e.parent
            if(!image)
                +e.icon-error.icon-error
            +e.INPUT.field(name=name type="text")&attributes(attributes)
            if(image)
                +e.captcha
                    +e.IMG(src="/app/img/captcha.svg")
            if(!image && placeholder)
                +e.placeholder !{placeholder}